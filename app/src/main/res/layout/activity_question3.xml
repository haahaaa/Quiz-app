<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87cefa"
    tools:context=".question3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nametv"
            android:layout_width="126dp"
            android:layout_height="59dp"
            android:gravity="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="  's Score: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fscore"
            android:layout_width="159dp"
            android:layout_height="59dp"

            android:gravity="start"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ProgressBar

            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="334dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right|top|end"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="19dp"
            android:max="5"
            android:progress="3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="76dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-8dp"
            android:layout_marginLeft="-8dp"
            android:layout_marginEnd="342dp"
            android:layout_marginRight="342dp"
            android:layout_marginBottom="19dp"
            android:gravity="center"
            android:text="3/5"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="102dp"
            android:layout_height="41dp"
            android:layout_alignStart="@+id/progressBar"
            android:layout_alignLeft="@+id/progressBar"
            android:layout_alignTop="@+id/progressBar"
            android:layout_alignBottom="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="116dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="122dp"
            android:layout_marginRight="122dp"
            android:layout_marginBottom="-3dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:text="60%" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Question Title:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="What are people usually call the ViewGroup objects?"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/answer1"
            android:layout_width="221dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/answer_button"

            android:text="LinearLayout"

            android:textColor="@color/black"


            />

        <Button
            android:id="@+id/answer2"
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/answer_button"

            android:text="Layout"
            android:textColor="@color/black"

            />

        <Button
            android:id="@+id/answer3"
            android:layout_width="221dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:background="@drawable/answer_button"
            android:text="Component"
            android:textColor="@color/black"

            />
    </LinearLayout>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="295dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:background="@drawable/submitbtn"
        />

</LinearLayout>